#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <time.h>
#define N 100000

int addr[N], data[N], next[N];
void Read(int n);
void Reverse(int k, int firstAddress, int n);

int main()
{
    int n;
   
    int firstAddress, k;
    scanf("%d %d %d",&firstAddress,&n,&k);
    Read(n);
    Reverse(k, firstAddress, n);
    return 0;
}

void Reverse(int k, int firstAddress, int n)
{
    int a[N];
    int i, j;
    int flag=1;
    int front=firstAddress;
    int front1,front0=firstAddress;
    n=0;
    while(front0!=-1)
    {
        front0=next[front0];
        n+=1;
    }
    while(n-k>=0)
    {
        for(i=0;i<k;i++)
        {
            a[i]=front;
            front=next[front];
        }
        for(i-=1;i>=1;i--)
        {
            printf("%05d %d %05d\n",a[i],data[a[i]],a[i-1]);
        }
        if(n-k==0||front==-1)
        {
            printf("%05d %d %d\n",a[i],data[a[i]],-1);
            flag=-1;
        }
        else
        {
            if((n-2*k)<0)
            {
                printf("%05d %d %05d\n",a[i],data[a[i]],next[a[k-1]]);
            }
            else
            {
                front1=front;
                for(j=1;j<k;j++)
                {
                    front1=next[front1];
                }
                printf("%05d %d %05d\n",a[i],data[a[i]],front1);
            }
        }
        n-=k;
    }
    if(flag==1&&front!=-1)
    {
        while(next[front]!=-1)
        {
            printf("%05d %d %05d\n",front,data[front],next[front]);
            front=next[front];
        }
        printf("%05d %d %d\n",front,data[front],next[front]);
    }
}

void Read(int n)
{
    int i;
    int front, num, rear;
    for(i=0;i<n;i++)
    {
        scanf("%d %d %d",&front,&num,&rear);
        data[front]=num;
        next[front]=rear;
    }
}
